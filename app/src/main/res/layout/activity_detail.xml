<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.detail.DetailMovieActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/img_backdrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_backdrop_height"
                android:fitsSystemWindows="true"
                android:contentDescription="@string/poster_backdrop"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="@dimen/toolbar_elevation"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:layout_collapseMode="pin"
                tools:targetApi="lollipop"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <View
                    android:id="@+id/center"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.45"/>

                <ImageView
                    android:id="@+id/img_poster"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/img_backdrop_height"
                    android:layout_marginStart="@dimen/margin_normal_size"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:contentDescription="@string/poster"
                    app:layout_constraintEnd_toStartOf="@+id/center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:text="@string/movie_title"
                    android:textColor="#000000"
                    android:textSize="@dimen/header_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:text="@string/movie_date"
                    android:textStyle="bold"
                    android:textSize="@dimen/content_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:text="@string/movie_date"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"/>

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:text="@string/movie_rating"
                    android:textSize="@dimen/small_content_text_size"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:text="@string/movie_genres"
                    android:textStyle="bold"
                    android:textSize="@dimen/content_text_size"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rating"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"/>

                <TextView
                    android:id="@+id/tv_genres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:text="@string/movie_genres"
                    android:textSize="@dimen/small_content_text_size"
                    android:ellipsize="marquee"
                    android:focusable="auto"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"/>

                <TextView
                    android:id="@+id/txt_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:text="@string/movie_duration"
                    android:textStyle="bold"
                    android:textSize="@dimen/content_text_size"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@+id/tv_genres"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"/>

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:text="@string/movie_duration"
                    android:textSize="@dimen/small_content_text_size"
                    app:layout_constraintTop_toBottomOf="@+id/txt_duration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/center"
                    android:visibility="invisible"/>

                <View
                    android:id="@+id/line_detail_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFC2C1C1"
                    android:layout_marginTop="26dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_overview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_big_size"
                    android:layout_marginEnd="@dimen/margin_big_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:text="@string/overview"
                    android:textColor="#000000"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line_detail_one"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAllCaps="true"/>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_marginEnd="@dimen/margin_big_size"
                    android:layout_marginStart="@dimen/margin_big_size"
                    android:textSize="@dimen/small_content_text_size"
                    android:text="@string/movie_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_overview"/>

                <View
                    android:id="@+id/line_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFC2C1C1"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>